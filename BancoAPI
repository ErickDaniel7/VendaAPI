-- VariáveisDO $$DECLARE    nome_schema TEXT := 'public';    tabela_cliente TEXT := nome_schema || '.cliente';    tabela_itensvenda TEXT := nome_schema || '.itensvenda';    tabela_produto TEXT := nome_schema || '.produto';    tabela_venda TEXT := nome_schema || '.venda';    sequencia_id_cliente TEXT := nome_schema || '.cliente_id_seq';    sequencia_id_itensvenda TEXT := nome_schema || '.itensvenda_id_seq';    sequencia_id_produto TEXT := nome_schema || '.produto_id_seq';    sequencia_id_venda TEXT := nome_schema || '.venda_id_seq';BEGIN    -- Remover Restrições    ALTER TABLE ONLY tabela_cliente DROP CONSTRAINT IF EXISTS cliente_pkey;    ALTER TABLE ONLY tabela_itensvenda DROP CONSTRAINT IF EXISTS itensvenda_pkey;    ALTER TABLE ONLY tabela_produto DROP CONSTRAINT IF EXISTS produto_pkey;    ALTER TABLE ONLY tabela_venda DROP CONSTRAINT IF EXISTS venda_pkey;    -- Remover Sequências    DROP SEQUENCE IF EXISTS sequencia_id_cliente CASCADE;    DROP SEQUENCE IF EXISTS sequencia_id_itensvenda CASCADE;    DROP SEQUENCE IF EXISTS sequencia_id_produto CASCADE;    DROP SEQUENCE IF EXISTS sequencia_id_venda CASCADE;    -- Criar Sequências    CREATE SEQUENCE sequencia_id_cliente START WITH 1 INCREMENT BY 1;    CREATE SEQUENCE sequencia_id_itensvenda START WITH 1 INCREMENT BY 1;    CREATE SEQUENCE sequencia_id_produto START WITH 1 INCREMENT BY 1;    CREATE SEQUENCE sequencia_id_venda START WITH 1 INCREMENT BY 1;    -- Adicionar Restrições de Chave Primária    ALTER TABLE ONLY tabela_cliente ADD CONSTRAINT cliente_pkey PRIMARY KEY (id);    ALTER TABLE ONLY tabela_itensvenda ADD CONSTRAINT itensvenda_pkey PRIMARY KEY (id);    ALTER TABLE ONLY tabela_produto ADD CONSTRAINT produto_pkey PRIMARY KEY (id);    ALTER TABLE ONLY tabela_venda ADD CONSTRAINT venda_pkey PRIMARY KEY (id);    -- Definir Valores das Sequências    SELECT setval(sequencia_id_cliente, 1, true);    SELECT setval(sequencia_id_itensvenda, 1, false);    SELECT setval(sequencia_id_produto, 1, true);    SELECT setval(sequencia_id_venda, 1, true);END $$;